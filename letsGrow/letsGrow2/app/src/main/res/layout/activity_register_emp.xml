<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterEmp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="357dp"
            android:id="@+id/empname"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:fontFamily="@font/poppins"
            android:hint="Name"
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />

        <EditText
            android:layout_width="357dp"
            android:id="@+id/empemail"
            android:inputType="textEmailAddress"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:fontFamily="@font/poppins"
            android:hint="Email Address"
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />

        <EditText
            android:layout_width="357dp"
            android:layout_height="49dp"
            android:id="@+id/emppass"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:fontFamily="@font/poppins"
            android:hint="Password"
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />

        <EditText
            android:layout_width="357dp"
            android:layout_height="49dp"
            android:id="@+id/empexperi"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="270dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:fontFamily="@font/poppins"
            android:hint="Experience (Year) "
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />

        <EditText
            android:layout_width="357dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:id="@+id/empskills"
            android:fontFamily="@font/poppins"
            android:hint="Skills"
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />

        <EditText
            android:layout_width="357dp"
            android:layout_height="49dp"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="410dp"
            android:background="@drawable/etback"
            android:elevation="38dp"
            android:id="@+id/empmobile"
            android:fontFamily="@font/poppins"
            android:hint="Mobile Number"
            android:paddingLeft="15dp"
            android:textColorHint="#555454"
            android:textSize="18dp" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="600dp"
        android:elevation="38dp"
        android:src="@drawable/regemp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="481dp"
        android:elevation="48dp"
        android:src="@drawable/orangeback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regempbut"
        android:elevation="58dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/empregister"
        android:layout_marginTop="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>